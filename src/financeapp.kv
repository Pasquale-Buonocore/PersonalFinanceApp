#:kivy 1.0.9
#:include ui/ScreenMng.kv
#:include ui/Constant.kv

###########
# CUSTOM  #
###########
<CustomLabelMenu>:
    # Sizes
    size_hint: 1, 0.03
    text_size: root.width, None
    size: self.texture_size
    font_name: MenuLabelFond
    font_size: MenuLabelSize
    color: 0.6, 0.6, 0.6, 1

<CustomMenuButton>:
    canvas.after:
        Rectangle:
            source: self.ImageName
            pos: self.pos[0] + root.width/10, self.pos[1] + root.height/4
            size: self.size[0]*0.12, self.size[1]*0.5

    text_size: root.width, None
    size: self.texture_size
    font_name: MenuLabelFond
    font_size: MenuLabelSize
    background_color: 0,0,0,0
    size_hint: 1, ButtonMenu_size_hint_y

##################
# SETTING LAYOUT #
##################
<SettingLayout>:
    id: SettingLayout
    size_hint: 1, 0.04

    Label:
        size_hint: 0.91, 1
        text_size: root.width*0.91, None
        halign: 'center'
        
        text: 'Welcome to your Personal Finance app'
    
    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: '-'
        on_release: root.minimize_window()
    
    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: 'O'
        on_release: root.restore_window()

    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: 'X'
        on_release: app.stop()

<MenuDataLayout@BoxLayout>:
    id: MenuDataLayout
    orientation: 'horizontal'

<MenuLayout@StackLayout>:
    id: MenuDataLayout
    canvas.before:
        Color:
            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
        RoundedRectangle:
            pos: self.pos
            size: self.size

    orientation: 'lr-tb'
    size_hint: 0.2, 1
    padding: ["0dp", "20dp", "0dp", "0dp"]
    spacing: "5dp"

    CustomLabelMenu:
        text: MenuLabelSpace + 'MENU'
    
    CustomMenuButton:        
        id: Dashboard_btn
        text: MenuButtonSpace + DashboardScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: Transaction_btn
        text: MenuButtonSpace + TransactionScreenName
        on_release: self.move_screen(app,self.text)

    CustomLabelMenu:
        text: MenuLabelSpace + 'INVESTMENT'

    CustomMenuButton:
        id: ETF_btn
        text: MenuButtonSpace + ETFETCScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Stock_btn
        text: MenuButtonSpace + StocksScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Bond_btn
        text: MenuButtonSpace + BondScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Commodity_btn
        text: MenuButtonSpace + CommodityScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Crypto_btn
        text: MenuButtonSpace + CryptoScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomLabelMenu:
        text: MenuLabelSpace + 'STATISTIC'

    CustomMenuButton:
        id: Statistics_btn
        text: MenuButtonSpace + StatisticsScreenName
        on_release: self.move_screen(app,self.text)

    CustomLabelMenu:
        text: 'SETTING'

    CustomMenuButton:
        id: Setting_btn
        text: MenuButtonSpace + SettingScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: Credit_btn
        text: MenuButtonSpace + CreditScreenName
        on_release: self.move_screen(app,self.text)

<DataLayout@BoxLayout>:
    id: DataLayout
    size_hint: 0.8, 1
    Label:
        text: 'Data'

<ScreenManagerLayout@ScreenManager>:

############################################ 
<MainLayout>:
    id: MainLayout
    orientation: 'vertical'
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background/background5.jpg'

