#:kivy 1.0.9
#:include ui/ScreenMng.kv
#:include ui/Constant.kv

##################
# SETTING LAYOUT #
##################
<SettingLayout>:
    size_hint: 1, 0.04

    Label:
        size_hint: 0.91, 1
        text_size: root.width*0.91, None
        halign: 'center'
        
        text: 'Welcome to your Personal Finance app'
    
    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: '-'
        on_release: root.minimize_window()
    
    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: 'O'
        on_release: root.restore_window()

    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: 'X'
        on_release: app.stop()

<MenuDataLayout>:
    orientation: 'horizontal'

<MenuLayout>:
    orientation: 'lr-tb'
    size_hint: 0.2, 1
    spacing: "10dp"

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: DashboardScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: TransactionScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: ETFETCScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: StocksScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: BondScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: CommodityScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: CryptoScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: StatisticsScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, ButtonMenu_size_hint_y
        text: SettingScreenName
        on_release: self.move_screen(app,self.text)

<DataLayout>:
    size_hint: 0.8, 1
    Label:
        text: 'Data'

############################################ 
<MainLayout>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.jpg'

    orientation: 'vertical'
    SettingLayout:

    MenuDataLayout:
        MenuLayout:
        ScreenManagerLayout:


    

    

        



