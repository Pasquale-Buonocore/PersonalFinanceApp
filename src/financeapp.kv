#:kivy 1.0.9
#:include ui/ScreenMng.kv
#:include ui/Constant.kv

###########
# CUSTOM  #
###########
<CustomLabelMenu>:
    size_hint: 1, 0.03
    text_size: root.width, None
    size: self.texture_size
    font_name: app.Configuration.GetElementValue('LeftMenuTitleFontName') 
    font_size: app.Configuration.GetElementValue('LeftMenuTitleFontSize') 

<CustomMenuButton>:
    canvas.after:
        Rectangle:
            source: self.ImageName
            pos: self.pos[0] + root.width/10, self.pos[1] + root.height/4
            size: self.size[0]*0.12, self.size[1]*0.5

    text_size: root.width, None
    size: self.texture_size
    font_name: app.Configuration.GetElementValue('LeftMenuButtonFontName') 
    font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize') 
    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
    size_hint: 1, ButtonMenu_size_hint_y

##################
# SETTING LAYOUT #
##################

<MenuDataLayout@BoxLayout>:
    id: MenuDataLayout
    orientation: 'horizontal'
    padding: app.Configuration.GetElementValue('MenuDataLayoutPadding') 
    spacing: app.Configuration.GetElementValue('MenuDataLayoutSpacing') 

<MenuLayout@StackLayout>:
    id: MenuDataLayout
    canvas.before:
        Color:
            rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(app.Configuration.GetElementValue('MenuLayoutCanvasRadius'), app.Configuration.GetElementValue('MenuLayoutCanvasRadius')), ( app.Configuration.GetElementValue('MenuLayoutCanvasRadius'), app.Configuration.GetElementValue('MenuLayoutCanvasRadius')), ( app.Configuration.GetElementValue('MenuLayoutCanvasRadius'), app.Configuration.GetElementValue('MenuLayoutCanvasRadius')) ,( app.Configuration.GetElementValue('MenuLayoutCanvasRadius'), app.Configuration.GetElementValue('MenuLayoutCanvasRadius'))]

    orientation: 'lr-tb'
    size_hint: app.Configuration.GetElementValue('MenuLayoutSizeHint') 
    padding: app.Configuration.GetElementValue('MenuLayoutPadding') 
    spacing: app.Configuration.GetElementValue('MenuLayoutSpacing')

    CustomLabelMenu:
        text: MenuLabelSpace + 'MENU'
    
    CustomMenuButton:        
        id: Dashboard_btn
        text: MenuButtonSpace + DashboardScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: Transaction_btn
        text: MenuButtonSpace + TransactionScreenName
        on_release: self.move_screen(app,self.text)

    CustomLabelMenu:
        text: MenuLabelSpace + 'INVESTMENT'

    CustomMenuButton:
        id: ETF_btn
        text: MenuButtonSpace + ETFETCScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Stock_btn
        text: MenuButtonSpace + StocksScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Bond_btn
        text: MenuButtonSpace + BondScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Commodity_btn
        text: MenuButtonSpace + CommodityScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomMenuButton:
        id: Crypto_btn
        text: MenuButtonSpace + CryptoScreenName
        on_release: self.move_PortfolioScreen(app, self.text)

    CustomLabelMenu:
        text: MenuLabelSpace + 'STATISTIC'

    CustomMenuButton:
        id: Statistics_btn
        text: MenuButtonSpace + StatisticsScreenName
        on_release: self.move_screen(app,self.text)

    CustomLabelMenu:
        text: MenuLabelSpace + 'SETTING'

    CustomMenuButton:
        id: Setting_btn
        text: MenuButtonSpace + SettingScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: Credit_btn
        text: MenuButtonSpace + CreditScreenName
        on_release: self.move_screen(app,self.text)

<DataLayout@BoxLayout>:
    id: DataLayout
    size_hint: app.Configuration.GetElementValue('DataLayoutSizeHint') 
    Label:
        text: 'Data'

<ScreenManagerLayout@ScreenManager>:

############################################ 
<MainLayout>:
    id: MainLayout
    orientation: 'vertical'

    canvas:
        Color:
            rgba: app.Configuration.GetElementValue('WindowBackgroundColor')
        Rectangle:
            pos: self.pos
            size: self.size

    MenuDataLayout:
        MenuLayout:
        ScreenManagerLayout:


    

    

        



