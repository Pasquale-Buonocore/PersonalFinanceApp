#:kivy 1.0.9
#:include ui/ScreenMng.kv

###########
# CUSTOM  #
###########
<CustomMenuButton>:
    id: 'CustomMenuButton'
    background_color: 0,0,0,0
    size_hint: 1, ButtonMenu_size_hint_y

##################
# SETTING LAYOUT #
##################
<SettingLayout>:
    id: 'SettingLayout'
    size_hint: 1, 0.04

    Label:
        size_hint: 0.91, 1
        text_size: root.width*0.91, None
        halign: 'center'
        
        text: 'Welcome to your Personal Finance app'
    
    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: '-'
        on_release: root.minimize_window()
    
    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: 'O'
        on_release: root.restore_window()

    Button:
        size_hint: 0.03, 1
        pos_hint: 1, 1
        text: 'X'
        on_release: app.stop()

<MenuDataLayout>:
    id: 'MenuDataLayout'
    orientation: 'horizontal'

<MenuLayout>:
    id: 'MenuDataLayout'
    canvas.before:
        Color:
            rgba: 0.2,.2,0.2,0.5
        RoundedRectangle:
            pos: self.pos
            size: self.size

    orientation: 'lr-tb'
    size_hint: 0.2, 1
    spacing: "10dp"

    CustomMenuButton:
        id: 'Dashboard_btn'
        text: DashboardScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Transaction_btn'
        text: TransactionScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'ETF_btn'
        text: ETFETCScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Stock_btn'
        text: StocksScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Bond_btn'
        text: BondScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Commodity_btn'
        text: CommodityScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Crypto_btn'
        text: CryptoScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Statistics_btn'
        text: StatisticsScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Setting_btn'
        text: SettingScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        id: 'Credit_btn'
        text: CreditScreenName
        on_release: self.move_screen(app,self.text)

<DataLayout>:
    id: 'DataLayout'
    size_hint: 0.8, 1
    Label:
        text: 'Data'

############################################ 
<MainLayout>:
    id: 'MainLayout'
    orientation: 'vertical'
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.jpg'

    SettingLayout:
    MenuDataLayout:
        MenuLayout:
        ScreenManagerLayout:


    

    

        



