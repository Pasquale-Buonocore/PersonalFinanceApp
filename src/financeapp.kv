#:kivy 1.0.9
#:include Constant.kv
#:include ScreenMng.kv

#:set DashboardScreenName 'Dashboard'
#:set TransactionScreenName 'Transaction'
#:set ETF-ETCScreenName 'ETF-ETC'
#:set StocksScreenName 'Stock'
#:set BondScreenName 'Bond'
#:set CommodityScreenName 'Commodities'
#:set CryptoScreenName 'Crypto'
#:set StatisticsScreenName 'Statistics'
#:set SettingScreenName 'Setting'

##################
# SETTING LAYOUT #
##################
<SettingLayout>:
    size_hint: 1, 0.04

    Button:
        size_hint: 0.1, 1
        text: 'Info'
    Button:
        size_hint: 0.1, 1
        text: 'Setting'
    Button:
        size_hint: 0.1,1
        text: 'Save'

<MenuDataLayout>:
    orientation: 'horizontal'

<MenuLayout>:
    orientation: 'lr-tb'
    size_hint: 0.2, 1

    CustomMenuButton:
        size_hint: 1, 0.1
        text: DashboardScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: TransactionScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: ETFETCScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: StocksScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: BondScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: CommodityScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: CryptoScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: StatisticsScreenName
        on_release: self.move_screen(app,self.text)

    CustomMenuButton:
        size_hint: 1, 0.1
        text: SettingScreenName
        on_release: self.move_screen(app,self.text)

<DataLayout>:
    size_hint: 0.8, 1
    Label:
        text: 'Data'

############################################ 
<MainLayout>:
    orientation: 'vertical'
    SettingLayout:

    MenuDataLayout:
        MenuLayout:
        ScreenManagerLayout:


    

    

        



