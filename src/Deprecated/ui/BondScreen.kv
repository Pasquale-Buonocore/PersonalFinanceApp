#:kivy 1.0.9
#:include ui/Constant.kv

<BondScreen>:
    id: BondScreenName
    name: BondScreenName
    
    # Scroll View Transaction
    ScrollView:
        id: BondScrollView

        # Box containing Box Layout
        BoxLayout:
            id: Bond_BoxLayout_lvl
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "10dp", "50dp", "10dp")
            spacing: "20dp"

            Label:
                text: BondScreenName + ' TRANSACTIONS'
                size_hint: 1, None
                height: "50dp"    
            
            ###################
            # BOND BOX LAYOUT #
            ###################
            BoxLayout:
                orientation: 'vertical'
                id: Bonds
                size_hint: 1, None
                height: self.minimum_height
                spacing: "20dp"
                padding: ("0dp", "20dp", "0dp", "20dp")

                canvas.before:
                    Color:
                        rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(40, 40), (40, 40), (40, 40), (40, 40)]
                
                GridLayout:
                    id: Bonds_NameRow
                    size_hint: 1, None
                    height: "20dp"
                    padding: ("30dp", "0dp", "30dp", "0dp")
                    cols: 8
                    rows: 1

                    Label: 
                        text: 'Name'
                        size_hint: 0.3, 1
                    Label: 
                        text: 'Symbol'
                        size_hint: 0.1, 1
                    Label: 
                        text: 'Data'
                        size_hint: 0.1, 1
                    Label: 
                        text: 'Type'
                        size_hint: 0.1, 1
                    Label: 
                        text: 'Broker'
                        size_hint: 0.1, 1
                    Label: 
                        text: 'Quantity'
                        size_hint: 0.1, 1
                    Label: 
                        text: 'Total Spent'
                        size_hint: 0.1, 1
                    Button:
                        text: 'Add Item'
                        size_hint: 0.1, 1
                        on_release: root.Add_BondsItem()