#:kivy 1.0.9
#:include ui/Constant.kv

<TransactionListScreen>:
    id: TransactionListScreenName
    name: TransactionListScreenName
    
    # Scroll View Transaction
    ScrollView:
        id: TransactionScrollView

        # Box containing Box Layout
        BoxLayout:
            id: MainBoxLayout
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "10dp", "50dp", "50dp")
            spacing: "20dp"

            ##############################
            #      TRANSACTION LIST      #
            ##############################
            BoxLayout:
                id: TransactionListRow
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "20dp", "0dp", "0dp")
                spacing: "20dp"

                Button:
                    text: 'RETURN TO TRANSACTION'
                    size_hint: 0.15, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.ReturnBack()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                
                Label:
                    id: TransactionListLabel
                    size_hint: 0.6, None
                    font_name: 'Candarab'
                    font_size: 25
                    height: "40dp" 
                    halign: 'left'
                    text: 'TRANSACTION IN'

                Button:
                    text: 'ADD TRANSACTION'
                    size_hint: 0.15, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.AddNewAssetPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]