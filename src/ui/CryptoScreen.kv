#:kivy 1.0.9
#:include ui/Constant.kv

<CryptoScreen>:
    id: CryptoScreenName
    name: CryptoScreenName
    
    # Scroll View Transaction
    ScrollView:
        id: CryptoScrollView

        # Box containing Box Layout
        BoxLayout:
            id: PortfolioHeader
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "10dp", "50dp", "10dp")
            spacing: "20dp"

            # First row box layout
            BoxLayout:
                id: FirstRow
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "30dp", "0dp", "20dp")

                Label:
                    text: 'CRYPTO DASHBOARD'
                    size_hint: 0.8, None
                    font_name: 'Candarab'
                    font_size: 28
                    height: "40dp" 
                    halign: 'left'
                
                Button:
                    text: '+ Add  New Portfolio'
                    size_hint: 0.2, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.Add_CryptoPortfolio()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            BoxLayout:
                id: PortfoliosContainer
                orientation: 'vertical'
                size_hint: 1, None
                spacing: "20dp"
                height: self.minimum_height

                RelativeLayout:
                    size_hint: 1, None
                    id: Portfolio
                
                    Button:
                        size_hint: 1, None
                        height: "100dp"
                        on_release: print('CIAO')
                        background_color: 0,0,0,0
                        canvas.before:
                            Color:
                                rgba: 0.1,1,0.1,0.5
                            RoundedRectangle:
                                # pos: self.pos
                                size: self.size
                                radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                    Label:
                        id: PortfolioNameLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.05, 'y': 0.2}
                        text: 'PORTFOLIO NAME'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: PortfolioName
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.05, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        text: 'MAIN PAC'

                    Label:
                        id: PortfolioValueLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.3, 'y': 0.2}
                        text: 'PORTFOLIO VALUE'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: PortfolioValue
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.3, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        text: '100 $'
                    
                    Label:
                        id: PortfolioAssetLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.55, 'y': 0.2}
                        text: 'NUMBER OF ASSET'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: PortfolioAsset
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.55, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        text: '8'
                    
                    Label:
                        id: UpDownLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.80, 'y': 0.2}
                        text: 'RESUME STATUS'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: UpDownLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.80, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        color: 0,1,0,1
                        text: '+1000 $ (5%)'
                    

                    Button:
                        text: 'R'
                        size_hint: None, None
                        background_color: 0,0,0,0
                        width: "30dp"
                        height: "30dp"
                        pos_hint: {'x' : 0.95, 'y': 0.3}
                        on_release: print('REMOVE PORTFOLIO')
                        canvas.after:
                            Rectangle:
                                source: 'images/button/Trash.png'
                                pos: self.pos
                                size: self.size

                RelativeLayout:
                    size_hint: 1, None
                    id: Portfolio
                
                    Button:
                        size_hint: 1, None
                        height: "100dp"
                        on_release: print('CIAO')
                        background_color: 0,0,0,0
                        canvas.before:
                            Color:
                                rgba: 0.1,1,0.1,0.5
                            RoundedRectangle:
                                # pos: self.pos
                                size: self.size
                                radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                    Label:
                        id: PortfolioNameLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.05, 'y': 0.2}
                        text: 'PORTFOLIO NAME'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: PortfolioName
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.05, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        text: 'MAIN PAC'

                    Label:
                        id: PortfolioValueLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.3, 'y': 0.2}
                        text: 'PORTFOLIO VALUE'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: PortfolioValue
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.3, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        text: '100 $'
                    
                    Label:
                        id: PortfolioAssetLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.55, 'y': 0.2}
                        text: 'NUMBER OF ASSET'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: PortfolioAsset
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.55, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        text: '8'
                    
                    Label:
                        id: UpDownLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.80, 'y': 0.2}
                        text: 'RESUME STATUS'
                        font_name: 'Candarab'
                        font_size: 20

                    Label:
                        id: UpDownLbl
                        text_size: root.width, None
                        size: self.texture_size
                        pos_hint: {'x' : 0.80, 'y': -0.2}
                        font_name: 'Candarab'
                        font_size: 35
                        color: 0,1,0,1
                        text: '+1000 $ (5%)'
                    

                    Button:
                        text: 'R'
                        size_hint: None, None
                        background_color: 0,0,0,0
                        width: "30dp"
                        height: "30dp"
                        pos_hint: {'x' : 0.95, 'y': 0.3}
                        on_release: print('REMOVE PORTFOLIO')
                        canvas.after:
                            Rectangle:
                                source: 'images/button/Trash.png'
                                pos: self.pos
                                size: self.size





                
                
                    
            
            
            
