#:kivy 1.0.9
#:include ui/Constant.kv

<PortfolioScreen>:
    id: PortfolioScreenName
    name: PortfolioScreenName
    
    # Scroll View Transaction
    ScrollView:
        id: PortfolioScrollView

        # Box containing Box Layout
        BoxLayout:
            id: PortfolioHeader
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "10dp", "50dp", "10dp")
            spacing: "20dp"

            # First row box layout
            BoxLayout:
                id: FirstRow
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "30dp", "0dp", "20dp")

                Label:
                    text: 'CRYPTO DASHBOARD'
                    size_hint: 0.8, None
                    font_name: 'Candarab'
                    font_size: 28
                    height: "40dp" 
                    halign: 'left'
                
                Button:
                    text: 'ADD NEW PORTFOLIO'
                    size_hint: 0.2, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.AddNewPortfolioPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            BoxLayout:
                id: PortfoliosContainer
                orientation: 'vertical'
                size_hint: 1, None
                spacing: "20dp"
                height: self.minimum_height