#:kivy 1.0.9
#:include ui/Constant.kv

<TransactionScreen>:
    id: TransactionScreenName
    name: TransactionScreenName
    
    # Scroll View Transaction
    ScrollView:
        id: TransactionScrollView

        # Box containing Box Layout
        BoxLayout:
            id: MainBoxLayout
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "10dp", "50dp", "50dp")
            spacing: "20dp"

            ############################
            #      TRANSACTION IN      #
            ############################
            BoxLayout:
                id: TransactionInRow
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "20dp", "0dp", "0dp")
                spacing: "20dp"
                
                Label:
                    id: TransactionInLabel
                    size_hint: 0.6, None
                    font_name: 'Candarab'
                    font_size: 25
                    height: "40dp" 
                    halign: 'left'
                    text: 'TRANSACTION IN'
                
                Button:
                    text: 'VIEW TRANSACTION IN'
                    size_hint: 0.2, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.AddNewAssetPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                Button:
                    text: 'ADD TRANSACTION IN'
                    size_hint: 0.2, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.AddNewAssetPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            BoxLayout:
                orientation: 'horizontal'
                id: TransactionInGraphCanvas
                size_hint: 1, None
                height: "400dp"
                spacing: "20dp"
                padding: ("0dp", "0dp", "0dp", "0dp")

                canvas:
                    Color:
                        rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.5, 1
                    id: TransactionInGraphBoxLayout

                    Image:
                        id: GraphTransactionIn
                        size:  self.size
            
                # Scroll View dashboard
                ScrollView:
                    id: TransactionInScreenView
                    size_hint: 0.5, 1

                    # Box containing assets distribution
                    BoxLayout:
                        id: TransactionInBoxInScrollView
                        orientation: 'vertical'
                        size_hint: 1, None
                        height: self.minimum_height
                        padding: ("20dp", "20dp", "20dp", "20dp")
                        spacing: "0dp"
                        
                        # First children containg the table title
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: 1, None
                            height: "40dp"

                            canvas.before:
                                Color:
                                    rgba: 0.1,0.1,0.9,0.7     
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                            Label:
                                size_hint: 0.4, None
                                font_name: 'Candarab'
                                font_size: 20
                                height: "40dp" 
                                text: 'CLASS NAME'

                            Label:
                                size_hint: 0.3, None
                                font_name: 'Candarab'
                                font_size: 20
                                height: "40dp" 
                                text: 'DESIRED'

                            Label:
                                size_hint: 0.3, None
                                font_name: 'Candarab'
                                font_size: 20
                                height: "40dp" 
                                text: 'ACTUAL'
                        
                        BoxLayout:
                            id: TransactionInTable
                            orientation: 'vertical'
                            size_hint: 1, None
                            height: self.minimum_height
                            padding: ("20dp", "20dp", "20dp", "20dp")
                            spacing: "20dp"

            #############################
            #      TRANSACTION OUT      #
            #############################           
            BoxLayout:
                id: TransactionOutRow
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "20dp", "0dp", "0dp")
                spacing: "20dp"
                
                Label:
                    id: TransactionOutLabel
                    size_hint: 0.6, None
                    font_name: 'Candarab'
                    font_size: 25
                    height: "40dp" 
                    halign: 'left'
                    text: 'TRANSACTION OUT'
                
                Button:
                    text: 'VIEW TRANSACTION OUT'
                    size_hint: 0.2, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.AddNewAssetPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                Button:
                    text: 'ADD TRANSACTION OUT'
                    size_hint: 0.2, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.AddNewAssetPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            BoxLayout:
                orientation: 'horizontal'
                id: GraphCanvas
                size_hint: 1, None
                height: "400dp"
                spacing: "20dp"
                padding: ("0dp", "0dp", "0dp", "0dp")

                canvas:
                    Color:
                        rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.5, 1
                    id: TransactionOutGraphBoxLayout

                    Image:
                        id: GraphTransactionOut
                        size:  self.size
            
                # Scroll View dashboard
                ScrollView:
                    id: TransactionOutScreenView
                    size_hint: 0.5, 1

                    # Box containing assets distribution
                    BoxLayout:
                        id: TransactionOutBoxInScrollView
                        orientation: 'vertical'
                        size_hint: 1, None
                        height: self.minimum_height
                        padding: ("20dp", "20dp", "20dp", "20dp")
                        spacing: "0dp"
                        
                        # First children containg the table title
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: 1, None
                            height: "40dp"

                            canvas.before:
                                Color:
                                    rgba: 0.1,0.1,0.9,0.7     
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                            Label:
                                size_hint: 0.4, None
                                font_name: 'Candarab'
                                font_size: 20
                                height: "40dp" 
                                text: 'CLASS NAME'

                            Label:
                                size_hint: 0.3, None
                                font_name: 'Candarab'
                                font_size: 20
                                height: "40dp" 
                                text: 'DESIRED'

                            Label:
                                size_hint: 0.3, None
                                font_name: 'Candarab'
                                font_size: 20
                                height: "40dp" 
                                text: 'ACTUAL'
                        
                        BoxLayout:
                            id: TransactionOutTable
                            orientation: 'vertical'
                            size_hint: 1, None
                            height: self.minimum_height
                            padding: ("20dp", "20dp", "20dp", "20dp")
                            spacing: "20dp"
                    
