        # Statistics Button
        RelativeLayout:
            CustomMenuSquareButton:
                id: Statistics_btn
                on_release: self.move_screen(app, app.Configuration.GetElementValue('ScreenNameDictionary')["StatisticsScreenName"])

            BoxLayout:
                orientation: 'vertical'
                padding: ["0dp","10dp","0dp","10dp"]
