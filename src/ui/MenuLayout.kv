#:kivy 1.0.9

###########
# CUSTOM  #
###########
<CustomLabelMenu>:
    size_hint: 1, 0.03
    text_size: root.width, None
    size: self.texture_size
    font_name: app.Configuration.GetElementValue('LeftMenuTitleFontName') 
    font_size: app.Configuration.GetElementValue('LeftMenuTitleFontSize') 

<CustomMenuButton>:
    canvas:
        Rectangle:
            source: self.ImageName
            pos: self.pos[0] + root.width/10, self.pos[1] + root.height/4
            size: self.size[0]*0.12, self.size[1]*0.45

    text_size: root.width, None
    size: self.texture_size
    font_name: app.Configuration.GetElementValue('LeftMenuButtonFontName') 
    font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize') 
    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
    size_hint: app.Configuration.GetElementValue('ButtonMenu_size_hint_xy') 

<MenuLayout>:
    id: MenuDataLayout
    orientation: 'lr-tb'
    size_hint: app.Configuration.GetElementValue('MenuLayoutSizeHint') 
    padding: app.Configuration.GetElementValue('MenuLayoutPadding') 
    spacing: app.Configuration.GetElementValue('MenuLayoutSpacing')
    
    canvas:
        Color:
            rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(app.Configuration.GetElementValue('MenuLayoutCanvasRadius'), app.Configuration.GetElementValue('MenuLayoutCanvasRadius'))] *4

    BoxLayout:
        id: ProfileBoxLayout
        orientation: 'vertical'
        spacing: "10dp"
        size_hint: app.Configuration.GetElementValue('ProfileBoxLayoutSizeHint')

        Image:
            id: ProfilePicture
            size_hint: 1, 0.5
            nocache: True
            source: './images/profile/anonymus.png'
        
        Label:
            id: WelcomeBackMessage
            size_hint: 1, 0.2
            text: 'Pasquale Buonocore'
            halign: 'center'
            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')

        BoxLayout:
            id: MonthSelectorBoxLayout_father
            orientation: 'horizontal'
            padding: ["20dp", "0dp", "20dp", "0dp"]
            size_hint: 1, 0.1

            BoxLayout:
                id: MonthSelectorBoxLayout_son
                orientation: 'horizontal'

                Button:
                    id: MonthSelection_MinusBtn
                    size_hint: 0.1, 1
                    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 0.5
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                    font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                    text: "<"
                
                Label:
                    id: MonthStringValue
                    size_hint: 0.6, 1
                    text: 'November'
                    halign: 'center'
                    font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                    font_size: app.Configuration.GetElementValue('ProfileNameFontSize')

                Button:
                    id: MonthSelection_PlusBtn
                    size_hint: 0.1, 1
                    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 0.5
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                    font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                    text: ">"

        BoxLayout:
            id: YearSelectorBoxLayout_father
            orientation: 'horizontal'
            padding: ["20dp", "0dp", "20dp", "0dp"]
            size_hint: 1, 0.1

            BoxLayout:
                id: YearSelectorBoxLayout_son
                orientation: 'horizontal'

                Button:
                    id: YearSelection_MinusBtn
                    size_hint: 0.1, 1
                    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 0.5
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                    font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                    text: "<"
                
                Label:
                    id: YearStringValue
                    size_hint: 0.6, 1
                    text: '2022'
                    halign: 'center'
                    font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                    font_size: app.Configuration.GetElementValue('ProfileNameFontSize')

                Button:
                    id: YearSelection_PlusBtn
                    size_hint: 0.1, 1
                    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 0.5
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                    font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                    text: ">"
            
        Button:
            text: 'Load month'
            size_hint: 0.5, 0.1
            pos_hint: {'x' : 0.25}
            background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
            canvas.before:
                Color:
                    rgba: app.Configuration.GetElementValue('WindowBackgroundColor') 
                RoundedRectangle:
                    pos: self.pos
                    size: self.size


    BoxLayout:
        id: MenuListOfButton
        orientation: 'vertical'
        size_hint: app.Configuration.GetElementValue('MenuButtonBoxLayoutSizeHint')

        CustomMenuButton:        
            id: Dashboard_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['DashboardScreenName']
            on_release: self.move_screen(app, self.text)

        CustomMenuButton:
            id: Transaction_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['TransactionScreenName']
            on_release: self.move_screen(app, self.text)

        CustomMenuButton:
            id: ETF_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['ETFETCScreenName']
            on_release: self.move_PortfolioScreen(app, self.text)

        CustomMenuButton:
            id: Stock_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['StocksScreenName'] 
            on_release: self.move_PortfolioScreen(app, self.text)

        CustomMenuButton:
            id: Bond_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['BondScreenName']  
            on_release: self.move_PortfolioScreen(app, self.text)

        CustomMenuButton:
            id: Commodity_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['CommodityScreenName']  
            on_release: self.move_PortfolioScreen(app, self.text)

        CustomMenuButton:
            id: Crypto_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['CryptoScreenName'] 
            on_release: self.move_PortfolioScreen(app, self.text)

        CustomMenuButton:
            id: Statistics_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') +  app.Configuration.GetElementValue('ScreenNameDictionary')['StatisticsScreenName']
            on_release: self.move_screen(app,self.text)

        CustomMenuButton:
            id: Setting_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['SettingScreenName']
            on_release: self.move_screen(app,self.text)

        CustomMenuButton:
            id: Credit_btn
            text: " " * app.Configuration.GetElementValue('MenuButtonSpaceNum') + app.Configuration.GetElementValue('ScreenNameDictionary')['CreditScreenName']
            on_release: self.move_screen(app,self.text)