#:kivy 1.0.9

###########
# CUSTOM  #
###########
<CustomLabelMenu>:
    size_hint: 1, 0.03
    text_size: root.width, None
    size: self.texture_size
    font_name: app.Configuration.GetElementValue('LeftMenuTitleFontName') 
    font_size: app.Configuration.GetElementValue('LeftMenuTitleFontSize') 

<CustomMenuRectangleButton>:
    canvas:
        Rectangle:
            source: self.ImageName
            # pos: self.pos[0] + root.width/10, self.pos[1] + root.height/4
            # size: self.size[0]*0.12, self.size[1]*0.45

    text_size: root.width, None
    size: self.texture_size
    font_name: app.Configuration.GetElementValue('LeftMenuButtonFontName') 
    font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize') 
    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
    size_hint: app.Configuration.GetElementValue('ButtonMenu_size_hint_xy') 

<CustomMenuSquareButton>:
    size: ["20dp", "20dp"]

    canvas:
        Rectangle:
            source: self.ImageName
            pos: self.pos[0] + root.width/10, self.pos[1] + root.height/4
            size: self.size[0]*0.12, self.size[1]*0.45

    text_size: root.width, None
    size: self.texture_size
    font_name: app.Configuration.GetElementValue('LeftMenuButtonFontName') 
    font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize') 
    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
    size_hint: app.Configuration.GetElementValue('ButtonMenu_size_hint_xy') 

<MenuLayout>:
    id: MenuDataLayout
    orientation: 'lr-tb'
    size_hint: app.Configuration.GetElementValue('MenuLayoutSizeHint') 
    padding: app.Configuration.GetElementValue('MenuLayoutPadding') 
    spacing: app.Configuration.GetElementValue('MenuLayoutSpacing')
    
    canvas:
        Color:
            rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(app.Configuration.GetElementValue('MenuLayoutCanvasRadius'), app.Configuration.GetElementValue('MenuLayoutCanvasRadius'))] *4

    # Profile box
    BoxLayout:
        id: ProfileBoxLayout
        orientation: 'vertical'
        spacing: "10dp"
        size_hint: app.Configuration.GetElementValue('ProfileBoxLayoutSizeHint')

        Image:
            id: ProfilePicture
            size_hint: 1, 0.5
            nocache: True
            source: './images/profile/anonymus.png'
        
        Label:
            id: WelcomeBackMessage
            size_hint: 1, 0.2
            text: 'Pasquale Buonocore'
            halign: 'center'
            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')

        GridLayout:
            size_hint: 1, 0.3
            rows: 1
            cols: 2

            # Month Year selectors
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 1
                spacing: "5dp"

                # MonthSelectorBoxLayout_father
                BoxLayout:
                    id: MonthSelectorBoxLayout_father
                    orientation: 'horizontal'
                    padding: ["20dp", "0dp", "20dp", "0dp"]


                    BoxLayout:
                        id: MonthSelectorBoxLayout_son
                        orientation: 'horizontal'

                        Button:
                            id: MonthSelection_MinusBtn
                            size_hint: 0.2, 1
                            background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                            canvas.before:
                                Color:
                                    rgba: app.Configuration.GetElementValue('WindowBackgroundColor')
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                            text: "<"
                        
                        Label:
                            id: MonthStringValue
                            size_hint: 0.6, 1
                            text: 'September'
                            halign: 'center'
                            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')

                        Button:
                            id: MonthSelection_PlusBtn
                            size_hint: 0.2, 1
                            background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                            canvas.before:
                                Color:
                                    rgba: app.Configuration.GetElementValue('WindowBackgroundColor')
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                            text: ">"
                # YearSelectorBoxLayout_father
                BoxLayout:
                    id: YearSelectorBoxLayout_father
                    orientation: 'horizontal'
                    padding: ["20dp", "0dp", "20dp", "0dp"]

                    BoxLayout:
                        id: YearSelectorBoxLayout_son
                        orientation: 'horizontal'

                        Button:
                            id: YearSelection_MinusBtn
                            size_hint: 0.2, 1
                            background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                            canvas.before:
                                Color:
                                    rgba: app.Configuration.GetElementValue('WindowBackgroundColor')
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                            text: "<"
                        
                        Label:
                            id: YearStringValue
                            size_hint: 0.6, 1
                            text: '2022'
                            halign: 'center'
                            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')

                        Button:
                            id: YearSelection_PlusBtn
                            size_hint: 0.2, 1
                            background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                            canvas.before:
                                Color:
                                    rgba: app.Configuration.GetElementValue('WindowBackgroundColor')
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                            font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                            font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                            text: ">"
            
            # Load month button
            BoxLayout:
                size_hint: 0.2, 1
                padding: ["0dp","12dp","12dp","12dp"]
                Button:
                    background_color: app.Configuration.GetElementValue('TransparentBackgroundColor') 
                    font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                    font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                    canvas.before:
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            source: './images/button/ReloadMonth.png'
    # Space padding
    BoxLayout:
        size_hint: app.Configuration.GetElementValue('ProfilePaddingSizeHint') 
        canvas.before:
            Color:
                rgba: app.Configuration.GetElementValue('WindowBackgroundColor') 
            RoundedRectangle:
                pos: self.pos
                size: self.size

    # Menu button box
    GridLayout:
        id: MenuListOfButton
        # orientation: 'vertical'
        cols: 2
        rows: 5
        size_hint: app.Configuration.GetElementValue('MenuButtonBoxLayoutSizeHint')

        spacing: "15dp" 
        padding: ["15dp","0dp","15dp","0dp"]

        RelativeLayout:
            Button:
                font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                font_size: app.Configuration.GetElementValue('ProfileNameFontSize')
                background_color: [1,0,0,0]
                canvas:
                    Color:
                        rgba: app.Configuration.GetElementValue('WindowBackgroundColor')
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size

            BoxLayout:
                orientation: 'vertical'
                padding: ["0dp","10dp","0dp","10dp"]
                spacing: "10dp"

                BoxLayout:
                    size_hint: 1, 0.6

                    Image:
                        pos: self.pos
                        size: self.size
                        source: './images/button/Dashboard.png'

                BoxLayout:
                    id: OctopusPictureLabel
                    size_hint: 1, 0.4

                    Label:
                        text: 'Dashboard'
                        halign: 'center'
                        font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                        font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize')

        Button:
            text: '2'

        Button:
            text: '1'

        Button:
            text: '2'

        Button:
            text: '1'

        Button:
            text: '2'

        Button:
            text: '1'

        Button:
            text: '2'

        Button:
            text: '1'

        Button:
            text: '2'

    # Space padding
    BoxLayout:
        size_hint: app.Configuration.GetElementValue('ProfilePaddingSizeHint') 
        canvas.before:
            Color:
                rgba: app.Configuration.GetElementValue('WindowBackgroundColor') 
            RoundedRectangle:
                pos: self.pos
                size: self.size

    # App infos and name
    BoxLayout:
        size_hint: app.Configuration.GetElementValue('AppProfileBoxLayoutSizeHint')
        orientation: 'horizontal'

        BoxLayout:
            id: OctopusPicture
            size_hint: 0.4, 0.5
            pos_hint: {'y': 0.55}

            Image:
                pos: self.pos
                size: self.size
                source: './images/button/OctopusFinancePurple.png'

        BoxLayout:
            id: OctopusPictureLabel
            size_hint: 0.6, 0.5
            pos_hint: {'y': 0.55}

            Label:
                id: AppName
                text: 'Octopus Finance'
                halign: 'center'
                font_name: app.Configuration.GetElementValue('ProfileNameFontName')
