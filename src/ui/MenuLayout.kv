                        halign: 'center'
                        font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                        font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize')

        # Commodities Button
        RelativeLayout:
            CustomMenuSquareButton:
                id: Commodities_btn
                on_release: self.move_PortfolioScreen(app, app.Configuration.GetElementValue('ScreenNameDictionary')["CommodityScreenName"])

            BoxLayout:
                orientation: 'vertical'
                padding: ["0dp","10dp","0dp","10dp"]
                spacing: "10dp"

                BoxLayout:
                    size_hint: 1, 0.6

                    Image:
                        pos: self.pos
                        size: self.size
                        source: 'images/button/commodities.png'

                BoxLayout:
                    id: OctopusPictureLabel
                    size_hint: 1, 0.4

                    Label:
                        id: ButtonLabel
                        text: 'Commodities'
                        halign: 'center'
                        font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                        font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize')
        
        # Crypto Button
        RelativeLayout:
            CustomMenuSquareButton:
                id: Crypto_btn
