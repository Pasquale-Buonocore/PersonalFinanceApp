                BoxLayout:
                    id: OctopusPictureLabel
                    size_hint: 1, 0.4

                    Label:
                        id: ButtonLabel
                        text: 'Transaction'
                        halign: 'center'
                        font_name: app.Configuration.GetElementValue('ProfileNameFontName')
                        font_size: app.Configuration.GetElementValue('LeftMenuButtonFontSize')

        # ETF - ETC Button
        RelativeLayout:
            CustomMenuSquareButton:
                id: EtfEtc_btn
                on_release: self.move_PortfolioScreen(app, app.Configuration.GetElementValue('ScreenNameDictionary')["ETFETCScreenName"])

            BoxLayout:
                orientation: 'vertical'
                padding: ["0dp","10dp","0dp","10dp"]
                spacing: "10dp"

                BoxLayout:
                    size_hint: 1, 0.6

                    Image:
                        pos: self.pos
