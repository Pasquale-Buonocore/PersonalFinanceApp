#:kivy 1.0.9
#:include ui/Constant.kv

<DashboardScreen>:
    id: DashboardScreen
    name: DashboardScreenName
    
    # Scroll View
    ScrollView:
        id: MainScrollView

        # Box containing Box Layout
        BoxLayout:
            id: BoxLayout_lvl
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "50dp", "50dp", "50dp")
            spacing: "40dp"
            
            Label:
                id: WelcomeBackMessage
                text: 'Welcome back Pasquale!'
                text_size: self.width, None
                size: self.texture_size
                font_name: 'Candarab'
                font_size: 28

            # First row containg Personal information and mounth resume
            BoxLayout:
                orientation: 'horizontal'
                id: FirstBoxLayout
                size_hint: 1, None
                height: "400dp"
                spacing: "20dp"
                padding: ("0dp", "0dp", "0dp", "0dp")

                # Box Layout containg personal information and welcome
                BoxLayout:
                    id: PersonalInfoContainer
                    orientation: 'vertical'
                    size_hint: 0.8, 1

                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                
                # Box Layout containg the month resume
                BoxLayout:
                    id: IncomeOutcomeBoxLayout
                    orientation: 'vertical'
                    size_hint: 0.2, 1
                    spacing: "20dp"

                    BoxLayout:
                        id: IncomeBoxLayout
                        orientation: 'vertical'
                        size_hint: 1, 0.25
                        spacing: "10dp"
                        canvas:
                            Color:
                                rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                    BoxLayout:
                        id: OutcomeBoxLayout
                        orientation: 'vertical'
                        size_hint: 1, 0.25
                        spacing: "10dp"
                        canvas:
                            Color:
                                rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            Label:
                text: 'Month variations'
                text_size: self.width, None
                size: self.texture_size
                font_name: 'Candarab'
                font_size: 28

            # Second row containg Personal information and mounth resume
            BoxLayout:
                orientation: 'horizontal'
                id: SecondBoxLayout
                size_hint: 1, None
                height: "200dp"
                spacing: "20dp"
                padding: ("0dp", "0dp", "0dp", "0dp")

                BoxLayout:
                    id: CashPerformance
                    orientation: 'vertical'
                    size_hint: 0.17, 1
                    spacing: "10dp"
                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                BoxLayout:
                    id: ETFPerformance
                    orientation: 'vertical'
                    size_hint: 0.17, 1
                    spacing: "10dp"
                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                BoxLayout:
                    id: StockPerformance
                    orientation: 'vertical'
                    size_hint: 0.17, 1
                    spacing: "10dp"
                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                BoxLayout:
                    id: BondPerformance
                    orientation: 'vertical'
                    size_hint: 0.17, 1
                    spacing: "10dp"
                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                BoxLayout:
                    id: CommodityPerformance
                    orientation: 'vertical'
                    size_hint: 0.17, 1
                    spacing: "10dp"
                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                                        # Box Layout per space
                    
                    BoxLayout:
                        size_hint: 1, 0.05
        
                    # Box Layout per image
                    RelativeLayout:
                        pos_hint: {'x': 0.6}
                        size_hint: 0.2, 0.3

                        Image:
                            source: './images/button/commodities.png'
                    
                    # Box Layout per info
                    BoxLayout:
                        size_hint: 1, 0.4
                        orientation: 'vertical'

                        Label:
                            pos_hint: {'x' : 0.1}
                            text: 'COMMODITY'
                            text_size: self.width, None
                            size: self.texture_size
                            font_name: 'Candarab'
                            font_size: 20
                            
                        Label:
                            pos_hint: {'x' : 0.1}
                            text: ' - 356 $'
                            color: 1,0,0,1
                            text_size: self.width, None
                            size: self.texture_size
                            font_name: 'Candara'
                            font_size: 35
                            
                    # Box Layout per space
                    BoxLayout:
                        size_hint: 1, 0.05


                BoxLayout:
                    id: CryptoPerformance
                    orientation: 'vertical'
                    size_hint: 0.17, 1
                    spacing: "10dp"

                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                    # Box Layout per space
                    BoxLayout:
                        size_hint: 1, 0.05
        
                    # Box Layout per image
                    RelativeLayout:
                        pos_hint: {'x': 0.6}
                        size_hint: 0.2, 0.3

                        Image:
                            source: './images/button/crypto.png'
                    
                    # Box Layout per info
                    BoxLayout:
                        size_hint: 1, 0.4
                        orientation: 'vertical'

                        Label:
                            pos_hint: {'x' : 0.1}
                            text: 'CRYPTO'
                            text_size: self.width, None
                            size: self.texture_size
                            font_name: 'Candarab'
                            font_size: 20
                            
                        Label:
                            pos_hint: {'x' : 0.1}
                            id: CryptoValue
                            text: '2000 $'
                            color: 0,1,0,1
                            text_size: self.width, None
                            size: self.texture_size
                            font_name: 'Candara'
                            font_size: 35

                    # Box Layout per space
                    BoxLayout:
                        size_hint: 1, 0.05

            Label:
                text: 'Portfolio distribution'
                text_size: self.width, None
                size: self.texture_size
                font_name: 'Candarab'
                font_size: 28

            BoxLayout:
                orientation: 'horizontal'
                id: FirstBoxLayout
                size_hint: 1, None
                height: "400dp"
                spacing: "20dp"
                padding: ("0dp", "0dp", "0dp", "0dp")

                canvas:
                    Color:
                        rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            Label:
                text: 'Asset distribution'
                text_size: self.width, None
                size: self.texture_size
                font_name: 'Candarab'
                font_size: 28
            
            BoxLayout:
                orientation: 'horizontal'
                id: FirstBoxLayout
                size_hint: 1, None
                height: "400dp"
                spacing: "20dp"
                padding: ("0dp", "0dp", "0dp", "0dp")

                canvas:
                    Color:
                        rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

