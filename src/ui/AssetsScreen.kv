#:kivy 1.0.9
#:include ui/Constant.kv

<AssetsScreen>:
    id: AssetsScreenName
    name: AssetsScreenName

    # Scroll View Transaction
    ScrollView:
        id: AssetsScrollView

        # Box containing Box Layout
        BoxLayout:
            id: AssetsHeader
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "0dp", "50dp", "20dp")
            spacing: "0dp"

            # First row box layout
            BoxLayout:
                id: FirstRow
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "30dp", "0dp", "20dp")
                
                Button:
                    text: 'BACK TO PORTFOLIO'
                    size_hint: 0.13, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.ReturnBack()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7                            
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                Label:
                    id: FirstRowLabel
                    size_hint: 0.75, None
                    font_name: 'Candarab'
                    font_size: 28
                    height: "40dp" 
                    halign: 'left'
                
                Button:
                    text: '+ ADD NEW ASSET'
                    size_hint: 0.12, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.AddNewAssetPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
            
            ########################
            # DASHBOARD BOX LAYOUT #
            ########################
            # Second element containg the column titles

            BoxLayout:
                orientation: 'vertical'
                id: DashboardContainer
                size_hint: 1, None
                height: self.minimum_height
                spacing: "20dp"
                padding: ("0dp", "20dp", "0dp", "20dp")

                BoxLayout:
                    id: DashboardLabel
                    size_hint: 1, None
                    pos_hint: {'x' : 0.04}
                    height: self.minimum_height
                    padding: ("0dp", "0dp", "0dp", "0dp")

                    Label:
                        font_name: 'Candarab'
                        font_size: 28
                        text_size: root.width, None
                        size: self.texture_size
                        text:'Dashboard'

                BoxLayout:
                    orientation: 'horizontal'
                    id: GraphCanvas
                    size_hint: 1, None
                    height: "500dp"
                    spacing: "20dp"
                    padding: ("0dp", "0dp", "0dp", "0dp")

                    canvas:
                        Color:
                            rgba: canvas_r,canvas_g,canvas_b,canvas_opacity
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                    
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, 1
                        id: Graph

                        Image:
                            id: GraphImage
                            size:  self.size

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, None
                        height: "500dp"
                        padding: ("0dp", "0dp", "0dp", "0dp")
                        spacing: "10dp"

                        # Scroll View dashboard
                        ScrollView:
                            id: DistributionTableScreenView
                            size_hint: 1, 0.8

                            # Box containing assets distribution
                            BoxLayout:
                                id: DistributionTableBoxLayout
                                orientation: 'vertical'
                                size_hint: 1, None
                                height: self.minimum_height
                                padding: ("30dp", "20dp", "20dp", "20dp")
                                spacing: "0dp"
                                
                                # First children containg the table title
                                BoxLayout:
                                    orientation: 'vertical'
                                    size_hint: 1, None
                                    height: "40dp"

                                    canvas:
                                        Color:
                                            rgba: 0.7, 0, 0, 0.5
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [(10, 10), (10, 10), (0, 0), (0, 0)]

                                    Label:
                                        id: TableName
                                        size_hint: 1, None
                                        font_name: 'Candarab'
                                        font_size: 20
                                        height: "40dp" 
                                        text: 'ALLOCATION DISTRIRBUTION'
                                
                                BoxLayout:
                                    id: AssetAllocationTable
                                    orientation: 'vertical'
                                    size_hint: 1, None
                                    height: self.minimum_height
                                    padding: ("20dp", "20dp", "20dp", "20dp")
                                    spacing: "20dp"

                                    canvas:
                                        Color:
                                            rgba: 0, 0, 0.7, 0.5
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [(0, 0), (0, 0), (10, 10), (10, 10)]
                        
                        BoxLayout:
                            orientatation: 'horizontal'
                            size_hint: 0.5, 0.2
                            pos_hint: {'x' : 0.25}
                            padding: ("20dp", "0dp", "20dp", "30dp")
                            spacing: "40dp"

                            Button:
                                size_hint: 0.5, 0.7
                                background_color: 0,0,1,0.7
                                text: 'MODIFY\n ALLOCATION'
                                halign: 'center'
                                font_size: 15
                            
                            Button:
                                size_hint: 0.5, 0.7
                                background_color: 0,0,1,0.7
                                text: 'REBALANCE\n POPUP'
                                font_size: 15
                                halign: 'center'

                            

    
                        

                    
                BoxLayout:
                    id: AssetLabel
                    size_hint: 1, None
                    pos_hint: {'x' : 0.04}
                    height: self.minimum_height
                    padding: ("0dp", "5dp", "0dp", "0dp")

                    Label:
                        font_name: 'Candarab'
                        font_size: 28
                        text_size: root.width, None
                        size: self.texture_size
                        text:'Assets'

            #####################
            # ASSETS BOX LAYOUT #
            #####################

            BoxLayout:
                id: AssetsContainer
                orientation: 'vertical'
                size_hint: 1, None
                spacing: "20dp"
                height: self.minimum_height
