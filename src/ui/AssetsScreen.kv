#:kivy 1.0.9

<AssetsScreen>:
    id: AssetsScreenName
    name: app.Configuration.GetElementValue('ScreenNameDictionary')["AssetsScreenName"]

    # Scroll View Transaction
    ScrollView:
		bar_inactive_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
        bar_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
        id: AssetsScrollView

        # Box containing Box Layout
        BoxLayout:
            id: AssetsHeader
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("50dp", "0dp", "50dp", "20dp")
            spacing: "0dp"

            # First row box layout
            BoxLayout:
                id: FirstRow
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "30dp", "0dp", "20dp")
                spacing: "5dp"
                
                Button:
                    text: 'BACK TO PORTFOLIO'
                    size_hint: 0.14, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.ReturnBack()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7                            
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                Label:
                    id: FirstRowLabel
                    size_hint: 0.6, None
                    font_name: 'Candarab'
                    font_size: 28
                    height: "40dp" 
                    halign: 'left'

                Button:
                    text: 'MODIFY ALLOCATION'
                    size_hint: 0.13, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.ModifyAllocation()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7                            
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                
                Button:
                    text: 'REBALANCE POPUP'
                    size_hint: 0.13, None
                    height: "40dp" 
                    background_color: 0,0,0,0
                    on_release: root.ModifyAllocation()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7                            
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                        
            
            ########################
            # DASHBOARD BOX LAYOUT #
            ########################
            # Second element containg the column titles

            BoxLayout:
                orientation: 'vertical'
                id: DashboardContainer
                size_hint: 1, None
                height: self.minimum_height
                spacing: "20dp"
                padding: ("0dp", "20dp", "0dp", "20dp")

                BoxLayout:
                    id: DashboardLabel
                    size_hint: 1, None
                    pos_hint: {'x' : 0.04}
                    height: self.minimum_height
                    padding: ("0dp", "0dp", "0dp", "20dp")

                    Label:
                        font_name: 'Candarab'
                        font_size: 28
                        text_size: root.width, None
                        size: self.texture_size
                        text:'Dashboard'

                BoxLayout:
                    orientation: 'horizontal'
                    id: GraphCanvas
                    size_hint: 1, None
                    height: "400dp"
                    spacing: "20dp"
                    padding: ("0dp", "0dp", "0dp", "0dp")

                    canvas:
                        Color:
                            rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                    
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, 1
                        id: Graph

                        Image:
                            id: GraphImage
                            size:  self.size

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, None
                        height: "400dp"
                        padding: ("0dp", "0dp", "0dp", "0dp")
                        spacing: "10dp"

                        # Scroll View dashboard
                        ScrollView:
                            id: DistributionTableScreenView

                            # Box containing assets distribution
                            BoxLayout:
                                id: DistributionTableBoxLayout
                                orientation: 'vertical'
                                size_hint: 1, None
                                height: self.minimum_height
                                padding: ("30dp", "20dp", "20dp", "20dp")
                                spacing: "0dp"
                                
                                # First children containg the table title
                                BoxLayout:
                                    orientation: 'horizontal'
                                    size_hint: 1, None
                                    height: "40dp"

                                    Label:
                                        size_hint: 0.4, None
                                        font_name: 'Candarab'
                                        font_size: 20
                                        height: "40dp" 
                                        text: 'ASSET NAME'

                                    Label:
                                        size_hint: 0.3, None
                                        font_name: 'Candarab'
                                        font_size: 20
                                        height: "40dp" 
                                        text: 'DESIRED'

                                    Label:
                                        size_hint: 0.3, None
                                        font_name: 'Candarab'
                                        font_size: 20
                                        height: "40dp" 
                                        text: 'ACTUAL'
                                
                                BoxLayout:
                                    orientation: 'vertical'
                                    size_hint: 1, None
                                    height: "2dp"

                                    canvas.before:
                                        Color:
                                            rgba: 1,1,1,1     
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                
                                BoxLayout:
                                    id: AssetAllocationTable
                                    orientation: 'vertical'
                                    size_hint: 1, None
                                    height: self.minimum_height
                                    padding: ("20dp", "20dp", "20dp", "20dp")
                                    spacing: "20dp"
                        
                BoxLayout:
                    id: AssetLabel
                    orientation: 'horizontal'
                    size_hint: 1, None
                    height: self.minimum_height
                    padding: ("0dp", "0dp", "0dp", "0dp")

                    BoxLayout:
                        size_hint: 0.85, None
                        height: 40
                        orientation: 'vertical'

                        Label:
                            font_name: 'Candarab'
                            font_size: 28
                            pos_hint: {'x' : -0.46}
                            text:'Assets'

                    Button:
                        text: 'ADD NEW ASSET'
                        size_hint: 0.15, None
                        height: "40dp" 
                        background_color: 0,0,0,0
                        on_release: root.AddNewAssetPopup()
                        font_name: 'Candarab'
                        font_size: 16
                        canvas.before:
                            Color:
                                rgba: 0.1,0.1,0.9,0.7
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            #####################
            # ASSETS BOX LAYOUT #
            #####################

            BoxLayout:
                id: AssetsContainer
                orientation: 'vertical'
                size_hint: 1, None
                spacing: "20dp"
                height: self.minimum_height
