            Label:
                id: Data_lbl
                text: 'Data'
            TextInput: 
                id: DataValue
                size_hint: 1,0.11

            # Type
            Label:
                id: Type_lbl
                text: 'Type'
            TextInput: 
                id: TypeValue
                size_hint: 1,0.11

            # Broker Name
            Label:
                id: Broker_lbl
                text: 'Broker'
            TextInput: 
                id: BrokerValue
                size_hint: 1,0.11

            # Quantity
            Label:
                id: Quantity_lbl
                text: 'Quantity'
            TextInput: 
                id: QuantityValue
                size_hint: 1,0.11
            
