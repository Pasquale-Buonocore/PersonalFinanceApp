#:kivy 1.0.9

<PortfolioScreen>: 
    id: PortfolioScreenName
    name: app.Configuration.GetElementValue('ScreenNameDictionary')["PortfolioScreenName"]
    
    # Main Box Layout
    BoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: ("0dp", "0dp", "0dp", "0dp")

        # First Box Layout containg the Portfolio Resume
        BoxLayout:
            id: PortfolioDashboardBoxLayout
            orientation: 'vertical'
            size_hint: 1, 0.35

            canvas:
                Color:
                    rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(30, 30), (30, 30), (30, 30), (30, 30)]

        # Second Box Layout containg the Portfolio lists
        BoxLayout:
            id: PortfolioMainListBoxLayout
            orientation: 'vertical'
            size_hint: 1, 0.65

            canvas:
                Color:
                    rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(30, 30), (30, 30), (30, 30), (30, 30)]

            # First row box layout
            BoxLayout:
                id: FirstRow
                orientation: 'horizontal'
                size_hint: 1, 0.12
                padding: ("30dp", "15dp", "20dp", "15dp")

                Label:
                    id: FirstRowName
                    text: 'PORTFOLIO LIST'
                    size_hint: 0.8, 1
                    font_name: 'Candarab'
                    text_size: self.width, None
                    size: self.texture_size
                    font_size: 25
                    halign: 'left'
                
                Button:
                    text: 'ADD NEW PORTFOLIO'
                    size_hint: 0.2, 1
                    background_color: 0,0,0,0
                    on_release: root.AddNewPortfolioPopup()
                    font_name: 'Candarab'
                    font_size: 16

                    canvas.before:
                        Color:
                            rgba: app.Configuration.GetElementValue('MenuButtonSelectedBackgroundColor') 
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
            
            # Box Layout containg the ScrollView
            BoxLayout:
                id: ScrollViewCointainerBoxLayout
                orientation: 'horizontal'
                size_hint: 1, 0.88
                padding: ("0dp", "0dp", "0dp", "20dp")

                # Scroll View Transaction
                ScrollView:
                	bar_inactive_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
                    bar_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
                    id: PortfolioScrollView

                    # Main portfolio Box Layout containing everything. Each ScrollView can contains one child maximum
                    BoxLayout:
                        id: PortfolioHeader
                        orientation: 'vertical'
                        size_hint: 1, None
                        height: self.minimum_height
                        padding: ("30dp", "0dp", "30dp", "0dp")
                        spacing: "0dp"