#:kivy 1.0.9

<AssetsTransactionScreen>:
    id: AssetsTransactionScreenName
    name: app.Configuration.GetElementValue('ScreenNameDictionary')["AssetsTransactionScreenName"] 

    # Main Stack Layout
    BoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: ("0dp", "0dp", "0dp", "0dp")
    
         # First Box Layout containg the Transaction Resume 
        BoxLayout:
            id: AssetTransactionDashboardBoxLayoutResume
            orientation: 'vertical'
            size_hint: 1, 0.35

            canvas:
                Color:
                    rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(30, 30), (30, 30), (30, 30), (30, 30)]

            # First Box Layout containg the Portfolio Resume title and buttons - y: 0.15
            BoxLayout:
                id: FirstRow
                orientation: 'horizontal'
                size_hint: 1, 0.25
                padding: ("15dp", "15dp", "15dp", "15dp")
                spacing: "5dp"
                
                # Back to portfolio button
                Button:
                    text: 'BACK'
                    size_hint: 0.05, 1
                    background_color: 0,0,0,0
                    on_release: root.ReturnBack()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: app.Configuration.GetElementValue('WindowBackgroundColor')                           
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                # Dashboard Title 
                Label:
                    id: DashboardTitle
                    size_hint: 0.69, 1
                    halign: 'center'
                    font_name: 'Candarab'
                    text_size: self.width, None
                    size: self.texture_size
                    font_size: 25

            # Second Box Layout containg the Portfolio Resume - y: 0.85
            BoxLayout:
                id: GraphCanvas
                orientation: 'horizontal'
                size_hint: 1, 0.75
                padding: ("0dp", "10dp", "0dp", "0dp")
                spacing: "20dp"


        # Second Box Layout containg the Asset Transaction lists
        BoxLayout:
            id: AssetMainListBoxLayout
            orientation: 'vertical'
            size_hint: 1, 0.65

            canvas:
                Color:
                    rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(30, 30), (30, 30), (30, 30), (30, 30)]

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.13
                padding: ("40dp", "15dp", "15dp", "15dp")
                
                # Lable Title 
                Label:
                    text: 'ASSET LIST'
                    size_hint: 0.85, 1
                    halign: 'left'
                    valign: 'center'
                    font_name: 'Candarab'
                    text_size: self.width, None
                    size: self.texture_size
                    font_size: 25

                # Add new asset button
                Button:
                    text: 'ADD TRANSACTION'
                    size_hint: 0.15, 1
                    background_color: 0,0,0,0
                    on_release: root.AddNewAssetTransactionPopup()
                    font_name: 'Candarab'
                    font_size: 16
                    canvas.before:
                        Color:
                            rgba: app.Configuration.GetElementValue('WindowBackgroundColor')  
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            BoxLayout:
                id: ScrollViewCointainerBoxLayout
                orientation: 'vertical'
                size_hint: 1, 0.87
                padding: ("0dp", "0dp", "0dp", "20dp")
                
                ScrollView:
                    bar_inactive_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
                    bar_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
                    id: AssetsScrollView

                    # ASSETS BOX LAYOUT #
                    BoxLayout:
                        id: AssetsTransactionHeader
                        orientation: 'vertical'
                        size_hint: 1, None
                        height: self.minimum_height
                        padding: ("30dp", "0dp", "30dp", "0dp")
                        spacing: "0dp"

