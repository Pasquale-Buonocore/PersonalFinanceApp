#:kivy 1.0.9

<TransactionListScreen>:
    id: TransactionListScreenName
    name: app.Configuration.GetElementValue('ScreenNameDictionary')["TransactionListScreenName"] 
    
    BoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        padding: ("15dp","15dp","15dp","15dp")

        canvas:
            Color:
                rgba: app.Configuration.GetElementValue('CanvasBackgroundColor') 
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [(30, 30), (30, 30), (30, 30), (30, 30)]
        
        # Box Layout containg title
        BoxLayout:
            id: TransactionListRow
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height
            padding: ("0dp", "0dp", "0dp", "20dp")
            spacing: "20dp"

            Button:
                text: 'RETURN TO TRANSACTION'
                size_hint: 0.15, None
                height: "40dp" 
                background_color: 0,0,0,0
                on_release: root.ReturnBack()
                font_name: 'Candarab'
                font_size: 16
                canvas.before:
                    Color:
                        rgba: app.Configuration.GetElementValue('WindowBackgroundColor') 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
            
            Label:
                id: TransactionListLabel
                size_hint: 0.6, None
                font_name: 'Candarab'
                font_size: 25
                height: "40dp" 
                halign: 'left'
                text: 'TRANSACTION IN'

            Button:
                text: 'ADD TRANSACTION'
                size_hint: 0.15, None
                height: "40dp" 
                background_color: 0,0,0,0
                on_release: root.OpenAddTransactionPopup()
                font_name: 'Candarab'
                font_size: 16
                canvas.before:
                    Color:
                        rgba: app.Configuration.GetElementValue('WindowBackgroundColor') 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]


        # Scroll View Transaction
        ScrollView:
            bar_inactive_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
            bar_color: app.Configuration.GetElementValue('ScrollViewBarBackgroundColor')
            id: TransactionScrollView

            # Box containing Box Layout
            BoxLayout:
                id: TransactionListBoxLayout
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("0dp", "0dp", "0dp", "0dp")
                spacing: "0dp"
   

