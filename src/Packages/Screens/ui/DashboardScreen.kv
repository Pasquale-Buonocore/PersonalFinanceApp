#:kivy 1.0.9

<DashboardScreen>:
    id: DashboardScreen
    name: app.Configuration_DB.GetElementValue('ScreenNameDictionary')["DashboardScreenName"]
    
    # Scroll View
    ScrollView:
        bar_inactive_color: app.Configuration_DB.GetElementValue('ScrollViewBarBackgroundColor')
        bar_color: app.Configuration_DB.GetElementValue('ScrollViewBarBackgroundColor')
        id: MainScrollView

        # Box containing Box Layout
        BoxLayout:
            id: BoxLayout_lvl
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            spacing: "20dp"

            # First row containg Personal information and mounth resume
            BoxLayout:
                orientation: 'horizontal'
                id: FirstBoxLayout
                size_hint: 1, None
                height: "400dp"
                spacing: "20dp"
                padding: ("0dp", "0dp", "0dp", "0dp")

                # Box Layout containg personal information and welcome
                BoxLayout:
                    id: PersonalInfoContainer
                    orientation: 'vertical'
                    size_hint: 0.8, 1

                    canvas:
                        Color:
                            rgba: app.Configuration_DB.GetElementValue('CanvasBackgroundColor') 
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'), app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'))] *4
            

                # Box Layout containg the month resume
                BoxLayout:
                    id: IncomeOutcomeBoxLayout
                    orientation: 'vertical'
                    size_hint: 0.2, 1
                    spacing: "20dp"

                    BoxLayout:
                        id: IncomeBoxLayout
                        orientation: 'vertical'
                        size_hint: 1, 0.25
                        spacing: "10dp"
                        canvas:
                            Color:
                                rgba: app.Configuration_DB.GetElementValue('CanvasBackgroundColor') 
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [(app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'), app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'))] *4

                                            # Box Layout per space
                        BoxLayout:
                            size_hint: 1, 0.05
            
                        # Box Layout per image
                        RelativeLayout:
                            pos_hint: {'x': 0.6}
                            size_hint: 0.2, 0.3

                            Image:
                                source: './images/button/income.png'
                        
                        # Box Layout per info
                        BoxLayout:
                            size_hint: 1, 0.4
                            orientation: 'vertical'

                            Label:
                                pos_hint: {'x' : 0.1}
                                text: 'TOTAL INCOME'
                                text_size: self.width, None
                                size: self.texture_size
                                font_name: 'Candarab'
                                font_size: 20
                                
                            Label:
                                pos_hint: {'x' : 0.1}
                                id: IncomeBoxLayout_label
                                text: '2000 $'
                                color: 0,1,0,1
                                text_size: self.width, None
                                size: self.texture_size
                                font_name: 'Candara'
                                font_size: 35

                        # Box Layout per space
                        BoxLayout:
                            size_hint: 1, 0.05

                    BoxLayout:
                        id: OutcomeBoxLayout
                        orientation: 'vertical'
                        size_hint: 1, 0.25
                        spacing: "10dp"
                        canvas:
                            Color:
                                rgba: app.Configuration_DB.GetElementValue('CanvasBackgroundColor') 
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [(app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'), app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'))] *4
                        
                        # Box Layout per space
                        BoxLayout:
                            size_hint: 1, 0.05
            
                        # Box Layout per image
                        RelativeLayout:
                            pos_hint: {'x': 0.6}
                            size_hint: 0.2, 0.3

                            Image:
                                source: './images/button/outcome.png'
                        
                        # Box Layout per info
                        BoxLayout:
                            size_hint: 1, 0.4
                            orientation: 'vertical'

                            Label:
                                pos_hint: {'x' : 0.1}
                                text: 'TOTAL OUTCOME'
                                text_size: self.width, None
                                size: self.texture_size
                                font_name: 'Candarab'
                                font_size: 20
                                
                            Label:
                                pos_hint: {'x' : 0.1}
                                id: OutcomeBoxLayout_label
                                text: '1400 $'
                                color: 1,0,0,1
                                text_size: self.width, None
                                size: self.texture_size
                                font_name: 'Candara'
                                font_size: 35

                        # Box Layout per space
                        BoxLayout:
                            size_hint: 1, 0.05
            # Box containg accounts and platforms
            BoxLayout:
                orientation: 'vertical'
                id: AccountGridLayouts
                size_hint: 1, None
                height: self.minimum_height
                spacing: "20dp"

                canvas.before:
                    Color:
                        rgba: app.Configuration_DB.GetElementValue('CanvasBackgroundColor') 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'), app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'))] *4
                
                BoxLayout:
                    id: CanvasLabelIdentifier
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: "30dp"
                    padding: ("25dp","25dp","0dp","0dp")

                    Label:
                        text: 'ACCOUNT AND PLATFORMS'
                        text_size: self.width, None
                        size: self.texture_size
                        font_name: 'Candarab'
                        font_size: 22
                
                BoxLayout:
                    id: AccountsBoxLayout
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height
                    spacing: "10dp"
                    padding: ("20dp","10dp","20dp","25dp")
            
            # Box Layout containg the Portfolio Distribution
            BoxLayout:
                orientation: 'vertical'
                id: AccountGridLayouts
                size_hint: 1, None
                height: self.minimum_height
                spacing: "20dp"

                canvas:
                    Color:
                        rgba: app.Configuration_DB.GetElementValue('CanvasBackgroundColor') 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'), app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'))] *4
                
                BoxLayout:
                    id: CanvasLabelIdentifier
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: "30dp"
                    padding: ("25dp","25dp","0dp","0dp")

                    Label:
                        text: 'PORTFOLIO DISTRIBUTION'
                        text_size: self.width, None
                        size: self.texture_size
                        font_name: 'Candarab'
                        font_size: 22
                
                BoxLayout:
                    orientation: 'horizontal'
                    id: FirstBoxLayout
                    size_hint: 1, None
                    height: "400dp"
                    spacing: "20dp"
                    padding: ("0dp", "0dp", "0dp", "0dp")

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.4, 1
                        id: AssetAllocationBoxLayout

                        Image:
                            id: GraphPortfolioAllocation
                            size:  self.size                
                
                    # Scroll View dashboard
                    ScrollView:
                        bar_inactive_color: app.Configuration_DB.GetElementValue('ScrollViewBarBackgroundColor')
                        bar_color: app.Configuration_DB.GetElementValue('ScrollViewBarBackgroundColor')
                        id: AssetAllocationScreenView
                        size_hint: 0.6, 1

                        # Box containing assets distribution
                        BoxLayout:
                            id: AssetAllocationBoxInScrollView
                            orientation: 'vertical'
                            size_hint: 1, None
                            height: self.minimum_height
                            padding: ("20dp", "20dp", "20dp", "20dp")
                            spacing: "0dp"
                            
                            # First children containg the table title
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint: 1, None
                                height: "40dp"

                                Label:
                                    size_hint: 0.4, None
                                    font_name: 'Candarab'
                                    font_size: 20
                                    height: "40dp" 
                                    text: 'CLASS NAME'

                                Label:
                                    size_hint: 0.3, None
                                    font_name: 'Candarab'
                                    font_size: 20
                                    height: "40dp" 
                                    text: 'LAST'

                                Label:
                                    size_hint: 0.3, None
                                    font_name: 'Candarab'
                                    font_size: 20
                                    height: "40dp" 
                                    text: 'ACTUAL'

                            BoxLayout:
                                orientation: 'vertical'
                                size_hint: 1, None
                                height: "2dp"

                                canvas.before:
                                    Color:
                                        rgba: 1,1,1,1     
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size


            # Box Layout containg the Portfolio Distribution
            BoxLayout:
                orientation: 'vertical'
                id: AssetDistributionBoxLayout
                size_hint: 1, None
                height: self.minimum_height
                spacing: "20dp"

                canvas:
                    Color:
                        rgba: app.Configuration_DB.GetElementValue('CanvasBackgroundColor') 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'), app.Configuration_DB.GetElementValue('DashboardBoxCanvasRadius'))] *4
                
                BoxLayout:
                    id: CanvasLabelIdentifier
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: "30dp"
                    padding: ("25dp","25dp","0dp","0dp")

                    Label:
                        text: 'ASSET DISTRIBUTION'
                        text_size: self.width, None
                        size: self.texture_size
                        font_name: 'Candarab'
                        font_size: 22
            
                BoxLayout:
                    orientation: 'horizontal'
                    id: FirstBoxLayout
                    size_hint: 1, None
                    height: "400dp"
                    spacing: "20dp"
                    padding: ("0dp", "0dp", "0dp", "0dp")
                    
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.4, 1
                        id: AssetAllocationBoxLayout

                        Image:
                            id: GraphAssetAllocation
                            size:  self.size
                
                    # Scroll View dashboard
                    ScrollView:
                        bar_inactive_color: app.Configuration_DB.GetElementValue('ScrollViewBarBackgroundColor')
                        bar_color: app.Configuration_DB.GetElementValue('ScrollViewBarBackgroundColor')
                        id: AssetAllocationScreenView
                        size_hint: 0.6, 1

                        # Box containing assets distribution
                        BoxLayout:
                            id: AssetAllocationBoxInScrollView
                            orientation: 'vertical'
                            size_hint: 1, None
                            height: self.minimum_height
                            padding: ("20dp", "20dp", "20dp", "20dp")
                            spacing: "0dp"
                            
                            # First children containg the table title
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint: 1, None
                                height: "40dp"

                                Label:
                                    size_hint: 0.4, None
                                    font_name: 'Candarab'
                                    font_size: 20
                                    height: "40dp" 
                                    text: 'CLASS NAME'

                                Label:
                                    size_hint: 0.3, None
                                    font_name: 'Candarab'
                                    font_size: 20
                                    height: "40dp" 
                                    text: 'LAST'

                                Label:
                                    size_hint: 0.3, None
                                    font_name: 'Candarab'
                                    font_size: 20
                                    height: "40dp" 
                                    text: 'ACTUAL'

                            BoxLayout:
                                orientation: 'vertical'
                                size_hint: 1, None
                                height: "2dp"

                                canvas.before:
                                    Color:
                                        rgba: 1,1,1,1     
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size
                            
                            BoxLayout:
                                id: AssetAllocationTable
                                orientation: 'vertical'
                                size_hint: 1, None
                                height: self.minimum_height
                                padding: ("20dp", "20dp", "20dp", "20dp")
                                spacing: "20dp"
