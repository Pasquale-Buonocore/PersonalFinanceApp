#:kivy 1.0.9

<TransactionInOutRowBoxLayout_Empty>:
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowBoxLayoutHeight')
    orientation: 'horizontal'

    Label: 
        text: 'THIS ASSET HAS NOT TRANSACTION!'
        text_size: self.width, None
        size: self.texture_size
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('AssetNameElementFontSize')
        halign: 'center'

<TransactionInOutLineSeparator>:
    orientation: 'vertical'
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowLineHeight') 
    canvas:
        Color:
            rgba: app.Configuration_DB.GetElementValue('WhiteLineBackgroundColor') 
        Rectangle:
            pos: self.pos
            size: self.size

<TransactionInOutRowButton>:
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowBoxLayoutHeight')
    background_color: [0, 0, 0, 0]

<TransactionInOutRowBoxLayout>:
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowBoxLayoutHeight')
    orientation: 'horizontal'

    canvas:
        Color:
            rgba: root.Background_color
        Rectangle:
            pos: self.pos
            size: self.size

    # Transaction Number - x: 0.05
    Label: 
        text: root.TransactionNumber
        size_hint: 0.05, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInTransactionListFontSize')

    # Date - x: 0.15
    Label: 
        text: root.Date
        size_hint: 0.15, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInTransactionListFontSize')
    
    # Amount Spent - x: 0.1
    Label: 
        text: root.Amount
        size_hint: 0.1, 1 
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInTransactionListFontSize')

    # Category - x: 0.15
    Label: 
        text: root.Category
        size_hint: 0.15, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInTransactionListFontSize')

    # Paying Account - x: 0.2
    Label: 
        text: root.PayingAccount
        size_hint: 0.2, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInTransactionListFontSize')

    # Description - x: 0.25
    Label: 
        text: root.Description
        size_hint: 0.25, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInTransactionListFontSize')

    # Box Layout containing buttons x: 0.1
    BoxLayout:
        size_hint: 0.1, 1
        orientation: 'horizontal'
        spacing: "20dp"
        padding: ("30dp","25dp","30dp","25dp")

        Button: 
            id: ModifyAssetButton
            on_release: root.Modify_transaction()
            background_color: [0, 0, 0, 0]

            canvas.after:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: './images/button/modify.png'

        Button: 
            on_release: root.Remove_transaction()
            id: RemoveAssetButton
            background_color: [0, 0, 0, 0]
            
            canvas.after:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: './images/button/remove.png'


