#:kivy 1.0.9
#:include ui/Constant.kv

<TransactionCategoryListPopup>:
    background_color: 0,0,0,0
    separator_color: 0,0,0,0
    title_align: 'center'
    title_size: PopupTitleSize
    title_font: PopupTitleFont 

    canvas.before:
        Color:
            rgba: 0.5,0.5,0.5,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

    BoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: ("20dp", "10dp", "20dp", "10dp")
        
        
        # Scroll View dashboard
        ScrollView:
            id: ClassesScreenView
            size_hint: 1, 0.8

            # Box containing assets distribution
            BoxLayout:
                id: ClassesBoxLayoutScrollView
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                padding: ("20dp", "20dp", "20dp", "20dp")
                spacing: "0dp"
                
                # First children containg the table title
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, None
                    height: "20dp"

                    Label:
                        size_hint: 0.4, None
                        font_name: 'Candarab'
                        font_size: 20
                        height: "20dp" 
                        text: 'Name'

                    Label:
                        size_hint: 0.3, None
                        font_name: 'Candarab'
                        font_size: 20
                        height: "20dp" 
                        text: 'Desired'

                    Label:
                        size_hint: 0.3, None
                        font_name: 'Candarab'
                        font_size: 20
                        height: "20dp" 
                        text: 'Action'
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: "2dp"

                    canvas.before:
                        Color:
                            rgba: 1,1,1,1     
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    id: ClassesTableElements
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height
                    padding: ("0dp", "20dp", "0dp", "20dp")
                    spacing: "20dp"

        BoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            size_hint: 1, 0.2
            pos_hint: {'x': 0, 'y': 1}

            BoxLayout:
                orientation: 'horizontal'
                spacing: "10dp"
                
                Button:
                    background_color: 0,0,0,0
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                    id: AddNewClass
                    font_name: PopupTitleFont
                    font_size: PopupInnerSize
                    text:'Add New'
                    on_release: root.AddNewClass()

                Button:
                    background_color: 0,0,0,0
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.9,0.7
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                    id: Confirm
                    font_name: PopupTitleFont
                    font_size: PopupInnerSize
                    text:'Confirm'
                    on_release: root.Confirm(app)

            Button:
                background_color: 0,0,0,0
                canvas.before:
                    Color:
                        rgba: 0.9,0.1,0.1,0.7
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                id: Cancel
                font_name: PopupTitleFont
                font_size: PopupInnerSize
                text:'Cancel'
                on_release: root.Cancel()