#:kivy 1.0.9

<WarningPopup>:
    background_color: 0,0,0,0
    separator_color: 0,0,0,0
    overlay_color: 0,0,0,0
    title_align: 'center'
    title_size: app.Configuration_DB.GetElementValue('PopupTitleFontSize')
    title_font: app.Configuration_DB.GetElementValue('PopupTitleFontName') 

    canvas.before:
        Color:
            rgba: 0.5,0.5,0.5,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

    BoxLayout:
        orientation: 'vertical'
        spacing: "30dp"
        padding: ("10dp", "0dp", "10dp", "10dp")
        
        Label:
            text_size: root.width, None
            size: self.texture_size
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PopupInnerFontSize')
            text: root.MessageToDisplay
            halign: 'center'
            valign: 'middle'

        Button:
            text: 'Ok'
            size_hint: 1, 0.25
            background_color: 0,0,0,0
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PopupInnerFontSize')
            on_release: root.dismiss()

            canvas.before:
                Color:
                    rgba: 0.9,0.1,0.1,0.7
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(10, 10), (10, 10), (10, 10), (10, 10)]


