#:kivy 1.0.9
#:include ui/Constant.kv

<AddPortfolioPopup>:
    background_color: 0,0,0,0
    separator_color: 0,0,0,0
    title_align: 'center'
    title_size: PopupTitleSize
    title_font: PopupTitleFont 

    canvas.before:
        Color:
            rgba: 0.5,0.5,0.5,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

    BoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: ("20dp", "10dp", "20dp", "10dp")
                
        GridLayout:
            size_hint: 1, 0.8
            cols: 2
            rows: 8

            # Asset Name
            Label:
                id: Name_lbl
                text: 'Name'
                font_name: PopupInnerFont
                font_size: PopupInnerSize
            TextInput: 
                id: NameValue
                size_hint: 1,0.11

            # Symbol
            Label:
                id: Symbol_lbl
                text: 'Symbol'
            TextInput: 
                id: SymbolValue
                size_hint: 1,0.11
            
            # Data
            Label:
                id: Data_lbl
                text: 'Data'
            TextInput: 
                id: DataValue
                size_hint: 1,0.11

            # Type
            Label:
                id: Type_lbl
                text: 'Type'
            TextInput: 
                id: TypeValue
                size_hint: 1,0.11

            # Broker Name
            Label:
                id: Broker_lbl
                text: 'Broker'
            TextInput: 
                id: BrokerValue
                size_hint: 1,0.11

            # Quantity
            Label:
                id: Quantity_lbl
                text: 'Quantity'
            TextInput: 
                id: QuantityValue
                size_hint: 1,0.11
            
            # Price
            Label:
                id: SinglePrice_lbl
                text: 'Price Per Asset'
            TextInput: 
                id: SinglePriceValue
                size_hint: 1,0.1
            
            # Total Price        
            Label:
                id: TotalPrice_lbl
                text: 'Total Spent'
            Label: 
                id: TotalSpentValue
                size_hint: 1,0.1

        BoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            size_hint: 1, 0.2

            Button:
                background_color: 0,0,0,0
                canvas.before:
                    Color:
                        rgba: 0.1,0.1,0.9,0.7
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                id: Confirm
                font_name: PopupInnerFont
                font_size: PopupInnerSize
                text:'Add Transaction'
                on_release: root.Confirm(app)

            Button:
                background_color: 0,0,0,0

                canvas.before:
                    Color:
                        rgba: 0.9,0.1,0.1,0.7
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                id: Cancel
                font_name: PopupInnerFont
                font_size: PopupInnerSize
                text:'Cancel'
                on_release: root.Cancel()