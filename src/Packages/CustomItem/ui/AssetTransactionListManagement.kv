#:kivy 1.0.9

<AssetTransactionRowBoxLayout_Empty>:
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowBoxLayoutHeight')
    orientation: 'horizontal'

    Label: 
        text: 'THIS ASSET HAS NOT TRANSACTION!'
        text_size: self.width, None
        size: self.texture_size
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('AssetNameElementFontSize')
        halign: 'center'

<AssetTransactionLineSeparator>:
    orientation: 'vertical'
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowLineHeight') 
    canvas:
        Color:
            rgba: app.Configuration_DB.GetElementValue('WhiteLineBackgroundColor') 
        Rectangle:
            pos: self.pos
            size: self.size

<AssetTransactionRowButton>:
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowBoxLayoutHeight')
    background_color: [0, 0, 0, 0]

<AssetTransactionRowBoxLayout>:
    size_hint: 1, None
    height: app.Configuration_DB.GetElementValue('AssetRowBoxLayoutHeight')
    orientation: 'horizontal'

    canvas:
        Color:
            rgba: root.Background_color
        Rectangle:
            pos: self.pos
            size: self.size

    # Transaction Number - x: 0.05
    Label: 
        size_hint: 0.05, 1
        id: TransactionNumber
        text: root.TransactionNumber
        text_size: self.width, None
        size: self.texture_size
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('AssetNameElementFontSize')
        halign: 'center'

    # Date x: 0.1
    Label: 
        size_hint: 0.1, 1
        id: DateValue
        text: root.Date
        text_size: self.width, None
        size: self.texture_size
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('AssetSymbolElementFontSize')
        halign: 'center'

    # Price Per Coin - x: 0.1
    Label: 
        text: root.PricePerCoin
        size_hint: 0.1, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInAssetTransactionListFontSize')

    # Amount - x: 0.1
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.1, 1 
        padding:("0dp","10dp","0dp","10dp")
        
        # Amount - x: 0.1
        Label: 
            size_hint: 1, 0.5 
            text: root.Amount
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('ElementInAssetTransactionListFontSize')

        # Open position - x: 0.1
        Label: 
            size_hint: 1, 0.5 
            text: '(' + root.OpenPosition + ')'
            color: [0, 1, 0, 1]
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('ElementInAssetTransactionListFontSize')

    #   Paying Account - x: 0.15
    GridLayout:
        padding: ("0dp","10dp","0dp","10dp")
        pos_hint: {'x' : 0.1}
        size_hint: 0.15, 1
        rows: 3
        cols: 1

        # Account Value
        Label: 
            text: root.PayingAccount_Account
            text_size: self.width, None
            size: self.texture_size
            halign: 'left'
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PayingStoringElementInAssetTransactionListFontSize')

        # SubAccount Value
        Label: 
            text: root.PayingAccount_SubAccount
            text_size: self.width, None
            size: self.texture_size
            halign: 'left'
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PayingStoringElementInAssetTransactionListFontSize')
        
        # Asset Value
        Label: 
            text: root.PayingAccount_Asset
            text_size: self.width, None
            size: self.texture_size
            halign: 'left'
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PayingStoringElementInAssetTransactionListFontSize')
    
    #   Storing Account - x: 0.15
    GridLayout:
        padding: ("0dp","10dp","0dp","10dp")
        pos_hint: {'x' : 0.1}
        size_hint: 0.15, 1
        rows: 3
        cols: 1

        # Account Value
        Label: 
            text: root.StoringAccount_Account
            text_size: self.width, None
            size: self.texture_size
            halign: 'left'
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PayingStoringElementInAssetTransactionListFontSize')

        # SubAccount Value
        Label: 
            text: root.StoringAccount_SubAccount
            text_size: self.width, None
            size: self.texture_size
            halign: 'left'
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PayingStoringElementInAssetTransactionListFontSize')

        # Asset Value
        Label: 
            text: root.StoringAccount_Asset
            text_size: self.width, None
            size: self.texture_size
            halign: 'left'
            font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
            font_size: app.Configuration_DB.GetElementValue('PayingStoringElementInAssetTransactionListFontSize')

    # Fee - x: 0.05
    Label: 
        text: root.Fee
        size_hint: 0.05, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInAssetTransactionListFontSize')

    # Note - x: 0.2
    Label: 
        text: root.Note
        size_hint: 0.2, 1
        font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
        font_size: app.Configuration_DB.GetElementValue('ElementInAssetTransactionListFontSize')

    # Box Layout containing buttons x: 0.1
    BoxLayout:
        size_hint: 0.1, 1
        orientation: 'horizontal'
        spacing: "20dp"
        padding: ("30dp","25dp","30dp","25dp")

        Button: 
            id: ModifyAssetButton
            on_release: print('Modifing ' + root.AssetName)
            background_color: [0, 0, 0, 0]

            canvas.after:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: './images/button/modify.png'

        Button: 
            on_release: print('Removing ' + root.AssetName)
            id: RemoveAssetButton
            background_color: [0, 0, 0, 0]
            
            canvas.after:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: './images/button/remove.png'


