        font_size: app.Configuration.GetElementValue('ElementInListFontSize')

<AddNewAccountBoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: "40dp"

    BoxLayout:
        size_hint: 0.4, 1

    Button:
        size_hint: 0.2, 1
        on_release: root.AddAccount()
        text: 'ADD NEW ACCOUNT'

    BoxLayout:
        size_hint: 0.4, 1


    