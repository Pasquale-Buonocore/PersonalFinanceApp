#:kivy 1.0.9

<AddFeePopup>:
    background_color: 0,0,0,0
    
    # Canvas for the poup background background
    canvas.before:
        Color:
            rgba: 0.5,0.5,0.5,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

    # Principal container
    BoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        padding: ("15dp","15dp","15dp","15dp")

        # Horizontal container with return back button and Title
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2
            
            canvas.before:
                Color:
                    rgba: 0,1,0.3,0.7
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            Button:
                id: ReturnBackButton
                size_hint: 0.05, 1
                
                text: '<'

                # Canvas for the poup background background
                canvas.before:
                    Color:
                        rgba: 0.3,0.3,0.3,0.7
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.95, 1

                Label:
                    text: 'Add fee'
                    text_size: self.width, None
                    size: self.texture_size
                    halign: 'left'
                    font_name: 'Candarab'
                    font_size: 20
        
        # Box Layout containg the Text Input to add the Fees
        BoxLayout:
            size_hint: 1, 0.8
            orientation: 'horizontal'
            spacing: "0dp"

            # Canvas for the poup background background
            canvas.before:
                Color:
                    rgba: 1,0.3,0.3,0.7
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

            # Label with currency
            Label:
                id: CurrencyValue
                text: '$'
                size_hint: 0.1, 1
                text_size: self.width, None
                size: self.texture_size
                halign: 'left'
                font_name: app.Configuration.GetElementValue('PopupTitleFontName')
                font_size: app.Configuration.GetElementValue('PopupTextFieldFontSize')

            # Value to insert
            TextInput: 
                id: FeeValue
                size_hint: 0.9, None
                height: self.minimum_height
                multiline: 0
                background_color: 0,0,0,0
                foreground_color: 1,1,1,1
                cursor_color: 1,1,1,1
                font_name: app.Configuration.GetElementValue('PopupTitleFontName')
                font_size: app.Configuration.GetElementValue('PopupTextFieldFontSize')
                halign: 'left'
