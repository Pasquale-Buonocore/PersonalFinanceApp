#:kivy 1.0.9

<RemoveTransactionPopup>:
    background_color: 0,0,0,0
    separator_color: 0,0,0,0
    overlay_color: 0,0,0,0
    title_align: 'center'
    title_size: app.Configuration_DB.GetElementValue('PopupTitleFontSize')
    title_font: app.Configuration_DB.GetElementValue('PopupTitleFontName') 

    canvas.before:
        Color:
            rgba: 0.5,0.5,0.5,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

    BoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: ("20dp", "10dp", "20dp", "10dp")
    
        BoxLayout:
            size_hint: 1, 0.7
            orientation:'vertical'

            Label:
                pos_hint: {'y' : 0.35}
                text: 'Do you really want to remove the element?\nThe operation is not reversable!'
                text_size: root.width, None
                size: self.texture_size
                font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
                font_size: app.Configuration_DB.GetElementValue('PopupTitleFontSize')
                halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            size_hint: 1, 0.3
            pos_hint: {'x': 0, 'y': 1}

            Button:
                background_color: 0,0,0,0
                canvas.before:
                    Color:
                        rgba: 0.1,0.1,0.9,0.7
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                id: Remove_portfolio
                font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
                font_size: app.Configuration_DB.GetElementValue('PopupInnerFontSize')
                text: 'Remove Transaction'
                on_release: root.RemoveIt()

            Button:
                background_color: 0,0,0,0
                canvas.before:
                    Color:
                        rgba: 0.9,0.1,0.1,0.7
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (10, 10), (10, 10)]

                id: Cancel
                font_name: app.Configuration_DB.GetElementValue('PopupTitleFontName')
                font_size: app.Configuration_DB.GetElementValue('PopupInnerFontSize')
                text: 'Cancel'
                on_release: root.dismiss()

    





























